<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:background="@null"
        android:fontFamily="@font/poppins_medium"
        android:paddingTop="5dp"
        android:text="12:30"
        android:textAlignment="center"
        android:textColor="#202C43"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/hall_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_toEndOf="@+id/date_text"
        android:background="@null"
        android:fontFamily="@font/poppins_light"
        android:paddingTop="5dp"
        android:text="Cinetech + hall 1"
        android:textAlignment="center"
        android:textColor="#8F8F8F"
        android:textSize="@dimen/_12sdp" />

    <RelativeLayout
        android:id="@+id/maprel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hall_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/clicked_background">

        <ImageView
            android:id="@+id/mapimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:src="@drawable/map_mobile" />

    </RelativeLayout>

    <TextView
        android:id="@+id/money_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maprel"
        android:layout_marginStart="@dimen/_5sdp"
        android:background="@null"
        android:fontFamily="@font/poppins_light"
        android:paddingTop="5dp"
        android:text="From 50$ or 2500 bonus"
        android:textAlignment="center"
        android:textColor="#8F8F8F"
        android:textSize="@dimen/_12sdp" />

</RelativeLayout>